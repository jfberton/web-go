pipeline {
    agent { label 'tuto' }
    
    enviroment{
        DOCKERHUB_CREDS = credentials('BertonDockerHub')
    }
   
    stages {
        stage('Build') {
            steps {
                container('podman') {
                    script {
                        sh 'podman build --tag docker.io/bertontheone/container_go:$BUILD_NUMBER -f ./Dockerfile'
                        sh 'podman login -u $DOCKERHUB_CREDS_USER -p DOCKERHUB_CREDS_PWS'
                        sh 'podman push docker.io/bertontheone/web-go:$BUILD_NUMBER'
                    }
                }
                container('kubectl') {
                    script {
                        sh 'kubectl version'
                    }
                }
            }
        }
    }
}
