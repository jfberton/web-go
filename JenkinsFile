pipeline {
    agent { label 'tuto' }
   
    stages {
        stage('Build') {
            steps {
                container('podman') {
                    script {
                        sh 'podman build --tag docker.io/bertontheone/container_go:$BUILD_NUMBER -f ./Dockerfile'
                    }
                }
                container('kubectl') {
                    script {
                        sh 'kubectl version'
                    }
                }
            }
        }
    }
}
